<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_relativeLayout_mms"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent" >
	<View
        android:id="@+id/spacing_top_mms"
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:layout_alignLeft="@+id/message_mms"
        android:layout_alignRight="@+id/message_mms"
        android:background="@android:color/transparent" />
    <TextView
        android:layout_below="@id/spacing_top_mms"
        android:id="@+id/message_mms"
        android:layout_width="wrap_content"
        android:minWidth="120dp"
        android:layout_height="wrap_content"
        android:padding="13dp"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textSize="13sp"
        android:textColor="#EEEEEE" />
	<TextView 
	    android:id="@+id/date_message_mms"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textSize="10sp"
        android:paddingRight="10dp"
        android:textColor="#999999"
        android:layout_alignRight="@id/message_mms"
        android:layout_alignBottom="@id/message_mms" />
	<ImageView 
	    android:id="@+id/image_message_mms"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignRight="@id/message_mms"
	    android:layout_alignLeft="@id/message_mms"
	    android:layout_below="@id/message_mms"
	    android:contentDescription="mms"
	    />
	<View android:id="@+id/is_read_mms"
	    android:layout_width="4dp"
	    android:layout_height="4dp"
	    android:layout_toLeftOf="@id/date_message_mms"
	    android:layout_alignBottom="@id/message_mms"
	    android:layout_marginBottom="4dip"
	    android:layout_marginRight="4dip"
	    android:background="#00000000" />
	
    <View
        android:id="@+id/border_bottom_mms"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_alignLeft="@id/message_mms"
        android:layout_alignRight="@id/message_mms"
        android:layout_below="@id/image_message_mms"
        android:background="#000000" />
    <View
        android:id="@+id/spacing_bottom_mms"
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:layout_alignLeft="@id/message_mms"
        android:layout_alignRight="@id/message_mms"
        android:layout_below="@id/border_bottom_mms"
        android:background="@android:color/transparent" />
    

</RelativeLayout>
